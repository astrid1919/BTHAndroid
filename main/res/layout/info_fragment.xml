<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/img"
        android:background="@color/colorBlue"/>

    <TextView
        android:id="@+id/tName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: Trang"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/tAdvantage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advantage: Game"
        app:layout_constraintTop_toBottomOf="@id/tName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/tDisadvantage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disadvantage: Study"
        app:layout_constraintTop_toBottomOf="@id/tAdvantage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        android:textSize="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>